{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "module": "Node16",
    "moduleResolution": "node16",
    "baseUrl": ".",
    "paths": {
      "@root/*": ["src/*"]
    }
  },
  "include": ["src/**/*",
    "src/types"
  ],
  "exclude": ["node_modules"]
}
